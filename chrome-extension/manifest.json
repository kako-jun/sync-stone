{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "0.1.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "activeTab",
    "scripting",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*.finalfantasyxiv.com/*",
    "https://*.finalfantasyxiv.com/lodestone/my/image/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.finalfantasyxiv.com/lodestone/character/*/blog/*", "https://*.finalfantasyxiv.com/lodestone/character/*/blog/*/edit", "https://*.finalfantasyxiv.com/lodestone/character/*/blog/*/*"],
      "js": ["node_modules/turndown/dist/turndown.js", "content.js"]
    }
  ]
}
